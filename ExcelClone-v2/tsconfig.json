{
  "compilerOptions": {
    "target": "ES6",                         
    "module": "ES6",                         
    "lib": ["DOM", "ES6"],                   
    "strict": true,                          
    "moduleResolution": "node",              
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./js",                      
    "rootDir": "ts",                      
    "allowJs": true,                         
    "checkJs": false                         
  },
  "include": ["ts"],
  "exclude": ["node_modules", "./js"]
}
